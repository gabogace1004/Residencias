@model UserRoles.Models.Sugerencias

@{
    ViewData["Title"] = "Buzón de Sugerencias";
}

<div class="container mt-5">
    <h2 class="mb-4">📥 Enviar sugerencia de proyecto</h2>

    @if (ViewBag.Mensaje != null)
    {
        <div class="alert alert-success">@ViewBag.Mensaje</div>
    }

    <form asp-action="Crear" method="post">
        <div class="row">
            <div class="col-md-4">
                <label>Nombre</label>
                <input asp-for="Nombre" class="form-control" />
            </div>
            <div class="col-md-4">
                <label>Apellido Paterno</label>
                <input asp-for="ApellidoPaterno" class="form-control" />
            </div>
            <div class="col-md-4">
                <label>Apellido Materno</label>
                <input asp-for="ApellidoMaterno" class="form-control" />
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-4">
                <label>Departamento</label>
                <input asp-for="Departamento" class="form-control" />
            </div>
            <div class="col-md-4">
                <label>Matrícula</label>
                <input asp-for="Matricula" class="form-control" />
            </div>
            <div class="col-md-4">
                <label>Contacto</label>
                <input asp-for="NumeroContacto" class="form-control" />
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-6">
                <label>Correo</label>
                <input asp-for="Correo" class="form-control" />
            </div>
            <div class="col-md-6">
                <label>Nombre del Proyecto</label>
                <input asp-for="NombreProyecto" class="form-control" />
            </div>
        </div>

        <div class="mt-3">
            <label>Descripción</label>
            <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
        </div>

        <div class="mt-3">
            <label>Razón Social</label>
            <input asp-for="RazonSocial" class="form-control" />
        </div>

        <button class="btn btn-primary mt-4" type="submit">Enviar sugerencia</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
